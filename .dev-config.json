{
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "reload": true,
    "log_level": "info",
    "use_colors": true
  },
  "watch": {
    "include_patterns": [
      "*.py",
      "*.json",
      "*.html",
      "*.css",
      "*.js",
      "*.md",
      "*.txt",
      "*.yml",
      "*.yaml",
      "*.env"
    ],
    "exclude_patterns": [
      "*.pyc",
      "__pycache__",
      ".git",
      ".venv",
      "venv",
      "node_modules",
      ".pytest_cache",
      ".mypy_cache",
      "*.log"
    ]
  }
}